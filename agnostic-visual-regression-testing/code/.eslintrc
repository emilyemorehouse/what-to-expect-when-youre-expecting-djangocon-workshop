{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "no-console": ["error", { allow: ["log", "warn", "error", "debug"] }],
    "no-underscore-dangle": "off",
    "react/jsx-no-bind": 1
  },
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  }
}
